<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_centerHorizontal="true"
       android:layout_height="330dp">

       <ImageView
           android:id="@+id/message_viewImage"
           android:layout_width="match_parent"
           android:layout_height="300dp" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_below="@id/message_viewImage"
           android:layout_height="30dp">
           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/view_messages"
               android:layout_marginLeft="50dp"
               android:text="@string/message_view"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="50dp"
               android:id="@+id/view_notification"
               android:text="@string/message_notification"
               android:layout_height="wrap_content" />


       </RelativeLayout>


   </RelativeLayout>


</RelativeLayout>